<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".ui.open_image.OpenImage">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/open_image_tool_bar"
            style="@style/Theme.SpacePictures"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_tittle_text_view"
                style="@style/TextTittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Space" />

            <ImageView
                android:id="@+id/space_image_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:transitionName="image_tag"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/text_text_view"
                style="@style/TextText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Text" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>