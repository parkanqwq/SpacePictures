<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpacePictures" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/color_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/color_gray</item>
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_gray</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:actionBarItemBackground">@color/black</item>
        <item name="android:colorControlNormal">@color/color_gray</item>
        <item name="android:textColorPrimary">@color/color_gray</item>
    </style>

    <style name="TextTittle" parent="Theme.SpacePictures">
        <item name="android:textColor">@color/color_gray_bright</item>
        <item name="android:textSize">@dimen/dimen_title_text_24sp</item>
        <item name="android:paddingBottom">@dimen/dimen_8dp</item>
        <item name="android:paddingLeft">@dimen/dimen_8dp</item>
        <item name="android:paddingRight">@dimen/dimen_8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="TextText" parent="Theme.SpacePictures">
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:textSize">@dimen/dimen_text_text_16sp</item>
        <item name="android:padding">@dimen/dimen_8dp</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="ButtonText" parent="Theme.SpacePictures">
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:textSize">@dimen/dimen_text_text_16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>
</resources>